<h1>Listing meals</h1>

<table>
  <tr>
    <th>Food type</th>
    <th>First day</th>
    <th>First day meal type</th>
    <th>Second day</th>
    <th>Second day meal type</th>
    <th>Third day</th>
    <th>Third day meal type</th>
    <th>Fourth day</th>
    <th>Fourth day meal type</th>
    <th>Fifth day</th>
    <th>Fifth day meal type</th>
    <th>Sixth day</th>
    <th>Sixth day meal type</th>
    <th>Seventh day</th>
    <th>Seventh day meal type</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meals.each do |meal| %>
  <tr>
    <td><%= meal.food_type %></td>
    <td><%= meal.first_day %></td>
    <td><%= meal.first_day_meal_type %></td>
    <td><%= meal.second_day %></td>
    <td><%= meal.second_day_meal_type %></td>
    <td><%= meal.third_day %></td>
    <td><%= meal.third_day_meal_type %></td>
    <td><%= meal.fourth_day %></td>
    <td><%= meal.fourth_day_meal_type %></td>
    <td><%= meal.fifth_day %></td>
    <td><%= meal.fifth_day_meal_type %></td>
    <td><%= meal.sixth_day %></td>
    <td><%= meal.sixth_day_meal_type %></td>
    <td><%= meal.seventh_day %></td>
    <td><%= meal.seventh_day_meal_type %></td>
    <td><%= meal.user %></td>
    <td><%= link_to 'Show', meal %></td>
    <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
    <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

