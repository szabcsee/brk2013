<h1><%= t 'activerecord.controllers.static_pages.programs.menu_title'%></h1>
<h4><%= t 'activerecord.controllers.static_pages.programs.description'%></h4>

<table class="table">
  <tr>
    <th><%= Program.human_attribute_name(:event_date)%></th>
    <% if I18n.locale.to_s == "en"%>
    <th><%= Program.human_attribute_name(:program_name_en)%></th>
    <% elsif I18n.locale.to_s == "hu"%>
    <th><%= Program.human_attribute_name(:program_name_hu)%></th>
    <% end %>
    <th><%= Program.human_attribute_name(:price_full)%></th>
    <th><%= Program.human_attribute_name(:price_full_eur)%></th>
    <th><%= Program.human_attribute_name(:price_discount_eur)%></th>
    <th><%= Program.human_attribute_name(:price_discount)%></th>
  </tr>
  <tr>
  	<td><%= t 'activerecord.controllers.static_pages.programs.24hours_meditation_date' %></td>
  	<td><%= t 'activerecord.controllers.static_pages.programs.24hours_meditation_description' %></td>
  	<td/><td/><td/><td/>
  </tr>
  <tr>
  	<td><%= t 'activerecord.controllers.static_pages.programs.daily_meditation_date' %></td>
  	<td><%= t 'activerecord.controllers.static_pages.programs.daily_meditation_description' %></td>
  	<td/><td/><td/><td/>
  </tr>
<% @programs.each do |program| %>
  <tr>
    <td><%= l program.event_date, :format => :long %></td>
    <% if I18n.locale.to_s == "en"%>
    <td><%= program.program_name_en %></td>
    <% elsif I18n.locale.to_s == "hu"%>
    <td><%= program.program_name_hu %></td>
    <% end %>
    <td><%= program.price_full %></td>
    <td><%= program.price_full_eur %></td>
    <td><%= program.price_discount_eur %></td>
    <td><%= program.price_discount %></td>
  </tr>
<% end %>
</table>

